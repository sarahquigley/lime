<div class="note-show show">

  <article class="note-body clearfix">
    
    <header class="note-header clearfix">
      <time class="note-meta"><%= note.updatedAtStr() %> </time>
      <div class="note-menu">
        <button class="edit-note">
          <i class="icon-pencil"></i>
        </button>
        <button class="delete-note">
          <i class="icon-trash"></i>
        </button>
      </div>
    </header>

    <div class="note-text">
      <p><%= note.get('body') %></p>
    </div>

  </article>

</div>

<div class="note-edit edit clearfix hidden">
  <%= formTemplate({ note: note, cssClass: cssClass })%>
</div>
